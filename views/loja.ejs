            </li> -->
            <h1 style="color: white; margin: 0; line-height: 0;">DELIVERY</h1>
            <i style="color:white" class="bi bi-box-arrow-right" onclick="logout()"></i>
            </li>
        </ul>
    </div>

    <div class="container-principal">
        <h2>BEM VINDO, DONO DA LOJA!</h2>
        <!-- <h6>TEMPO DE ESPERA: XXX(minutos)</h6>
        <div class="tempo-de-espera">
            <input type="number" name="tempo-de-espera" id="tempo-de-espera" placeholder="minutos">
            <button id="btn-tempo-espera" class="btn-loja">ALTERAR TEMPO DE ESPERA</button>
        </div> -->
