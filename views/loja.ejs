    </div>


    <div class="container-fluid px-4">
        <div class="column">
            
            <% if(status == true){ %>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            LANCONHETE ABERTA
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" onclick="changeEstabelecimento()">Fechar lanchonete</a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">
                            LANCONHETE FECHADA
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" onclick="changeEstabelecimento()">Abrir lanchonete</a>
                        </div>
                    </div>
                </div>
            <% } %>

            <div class="col-xl-3 col-md-6">
                <div class="card bg-secondary text-white mb-4">
                    <div class="card-body">
                        TEMPO DE ESPERA: <%= tempo %> (minutos)
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" onclick="toggleModalTempo()">Alterar tempo de espera</a>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">
                        PEDIDOS
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/delivery/pedidos?status=false">Ver pedidos</a>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-body">
                        PRODUTOS
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="/delivery/loja/add-produtos">Ver produtos</a>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div id="modal" class="hide"></div>
    <script src="/javascript/script-loja.js"></script>
</body>
</html>